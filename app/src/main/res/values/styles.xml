<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@android:color/white</item>

        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="edit_text" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/editor_text_size</item>
        <item name="android:gravity">center</item>

        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>

        <!-- Shadow -->
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1.6</item>
        <item name="android:shadowDy">1.4</item>
        <item name="android:shadowRadius">1.7</item>

    </style>

    <style name="text_view" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/watermark_size</item>
        <item name="android:gravity">end</item>
        <item name="android:alpha">0.5</item>

        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>

        <!-- Shadow -->
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1.6</item>
        <item name="android:shadowDy">1.4</item>
        <item name="android:shadowRadius">1.7</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
